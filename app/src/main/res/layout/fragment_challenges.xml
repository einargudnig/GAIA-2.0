<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e4f9f5">

    <TextView
        android:id="@+id/challengeTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/graduate"
        android:text="Challenges"
        android:textColor="#30e3ca"
        android:textSize="30sp" />

    <ListView
        android:id="@+id/challengeList"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/challengeTitle"
        android:fontFamily="@font/graduate"
        android:layout_alignLeft="@id/challengeTitle"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="2dp"
        android:layout_marginLeft="-22dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="-1dp"
        android:layout_marginBottom="-7dp" />
</RelativeLayout>
